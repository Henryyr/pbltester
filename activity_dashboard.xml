<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_navigation"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins"
                        android:text="Hello!"
                        android:textColor="#000000"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins"
                        android:text="Agus Devanda"
                        android:textColor="#000000"
                        android:textSize="12sp" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/imageViewNotification"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_vertical"
                    android:contentDescription="Notification Icon"
                    android:src="@raw/notification_bell"
                    app:tint="#000000" />
            </LinearLayout>

            <!-- CardView (Banner) Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="vertical"
                android:padding="16dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:src="@raw/poster" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:paddingLeft="100dp"
                        android:src="@raw/pict" />

                </RelativeLayout>
            </LinearLayout>

            <!-- Feature Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/poppins"
                android:text="Feature"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- Feature Buttons -->
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:columnCount="2"
                android:rowCount="2">

                <!-- Investasi -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_margin="20dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:background="@drawable/background_investasi"
                        android:elevation="8dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <ImageView
                            android:id="@+id/btn_investasi"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:contentDescription="Investasi Icon"
                            android:src="@raw/investasi" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/roboto"
                        android:gravity="center"
                        android:text="Investasi"
                        android:textColor="#000000"
                        android:textSize="16sp" />
                </LinearLayout>

                <!-- Top Up -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_margin="20dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/btn_topup"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:background="@drawable/background_topup"
                        android:elevation="8dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="58dp"
                            android:layout_height="58dp"
                            android:contentDescription="Top Up Icon"
                            android:src="@raw/topup" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/roboto"
                        android:gravity="center"
                        android:text="Top Up"
                        android:textColor="#000000"
                        android:textSize="16sp" />
                </LinearLayout>

                <!-- Transfer -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_margin="20dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/btn_transfer"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:background="@drawable/background_transfer"
                        android:elevation="8dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="58dp"
                            android:layout_height="58dp"
                            android:contentDescription="Transfer Icon"
                            android:src="@raw/transfer" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/roboto"
                        android:gravity="center"
                        android:text="Transfer"
                        android:textColor="#000000"
                        android:textSize="16sp" />
                </LinearLayout>

                <!-- History -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_margin="20dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/btn_history"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:background="@drawable/background_history"
                        android:elevation="8dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:contentDescription="History Icon"
                            android:src="@raw/history" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/roboto"
                        android:gravity="center"
                        android:text="History"
                        android:textColor="#000000"
                        android:textSize="16sp" />
                </LinearLayout>

            </GridLayout>


        </LinearLayout>
    </ScrollView>

    <!-- BotNav -->
    <LinearLayout
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:elevation="16dp">

        <!-- Item Home -->
        <ImageButton
            android:id="@+id/menu_home"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:src="@raw/menu"
            android:contentDescription="Home"
            android:padding="16dp"
            android:scaleType="fitCenter"
            android:tint="#000000"
            android:background="@color/white"/>

        <!-- Item Dashboard -->
        <ImageButton
            android:id="@+id/btn_scan"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:contentDescription="scanner"
            android:padding="16dp"
            android:scaleType="fitCenter"
            android:src="@raw/barcode"
            android:tint="#000000"
            android:background="@color/white"/>

        <!-- Item Notifications -->
        <ImageButton
            android:id="@+id/btn_user"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:src="@raw/user"
            android:contentDescription="user"
            android:padding="16dp"
            android:scaleType="fitCenter"
            android:tint="#000000"
            android:background="@color/white"/>

    </LinearLayout>


</RelativeLayout>
